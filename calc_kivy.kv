<Button>
    background_normal:''
    background_color :(11/255, 10/255, 28/255)
    size_hint:(0.2,0.2)

<CalculatorWidget>
    BoxLayout:
        orientation:'vertical'
        size: root.width,root.height
    
        TextInput:
            id: input_box
            text: '0'
            font_size:'45dp'
            multiline: False
            halign:'right'
            size_hint:(1,0.19)
            background_color:(193/255, 228/255, 232/255)

        GridLayout:
            cols: 4
            rows: 5
        ##row 1##
            Button:
                text:'%'
                font_size : '40dp'
                on_press:root.sign_value('%')
            
            Button:
                text:'C'
                font_size : '40dp'
                on_press: root.clear()
            
            Button:
                text:'«'
                font_size : '32dp'
                on_press: root.remove_last()
            
            Button:
                text:'÷'
                font_size : '40dp'
                color:'red'
                on_press:root.sign_value('/')

             ##row 2##
            Button:
                text:'7'
                font_size : '40dp'
                on_press: root.button_value(7)
            
            Button:
                text:'8'
                font_size :'40dp'
                on_press: root.button_value(8)
            
            Button:
                text:'9'
                font_size : '40dp'
                on_press: root.button_value(9)
            
            Button:
                text:'x'
                font_size : '40dp'
                color:'red'
                on_press:root.sign_value('*')

             ##row 3##
            Button:
                text:'4'
                font_size : '40dp'
                on_press: root.button_value(4)
            
            Button:
                text:'5'
                font_size : '40dp'
                on_press: root.button_value(5)
            
            Button:
                text:'6'
                font_size :'40dp'
                on_press: root.button_value(6)
            
            Button:
                text:'+'
                font_size :'40dp'
                color:'red'
                on_press:root.sign_value('+')
            
             ##row 4##
            Button:
                text:'1'
                font_size : '40dp'
                on_press: root.button_value(1)
            
            Button:
                text:'2'
                font_size : '40dp'
                on_press: root.button_value(2)
            
            Button:
                text:'3'
                font_size : '40dp'
                on_press: root.button_value(3)

            Button:
                text:'-'
                font_size : '40dp'
                color:'red'
                on_press:root.sign_value('-')
             ##row 5##
            Button:
                text:'± '
                font_size : '40dp'
                on_press: root.pos_neg()
            
            Button:
                text:'0'
                font_size : '40dp'
                on_press: root.button_value(0)

            
            Button:
                text:'.'
                font_size : '40dp'
                on_press: root.dot()
            
            Button:
                text:'='
                font_size : '40dp'
                color:'red'
                on_press: root.results()